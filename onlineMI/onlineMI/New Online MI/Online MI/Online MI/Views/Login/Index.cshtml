@model Online_MI.Models.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta charset="UTF-8" />
    <title>NYS Corporate Connex | Log in</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport' />
    <!-- bootstrap 3.0.2 -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- font Awesome -->
    <link href="~/Content/Styles/Frameworks/font-awesome.min.css" rel="stylesheet" type="text/css" />
    
    <link href="~/Content/Styles/Custom/custom.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/newLogin.js" type="text/javascript"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    <style type="text/css">
        html, body {
            overflow-x: hidden !important;
            font-family: Arial;
            -webkit-font-smoothing: antialiased;
            min-height: 100%;
            background: #C5C7C8;
        }

        body {
            padding-top: 7%;
        }

        .container {
            background-color: #fff;
            padding-top: 40px;
            padding-bottom: 80px;
        }

        .loginImg {
            padding: 30px 40px;
        }

        .loginInput {
            padding: 30px 40px;
        }

        .loginBG {
            background-color: #003976;
            color: #fff;
            padding: 6% 5%;
        }

        .containerCopyright {
            background-color: #C5C7C8;
            padding-top: 0;
            padding-bottom: 0;
        }

        .terms {
            padding: 10px 40px;
        }
    </style>

</head>
<body>
    <form id="frmLogin" action="/Login/Login" method="post">
        <div class="container">
            <div class="row">
                <div class="col-lg-1 col-md-1"></div>
                <div class="col-lg-5 col-md-5">
                    <img src="~/Content/Images/Login%20Images/logo.JPG" class="img-responsive" />
                </div>
                <div class="col-lg-5 col-md-5">
                    <img src="~/Content/Images/Login Images/Online MI Logo.jpg" class="img-responsive" />
                </div>
                <div class="col-lg-1 col-md-1"></div>
            </div>
            <div class="row">
                <div class="col-lg-1 col-md-1"></div>
                <div class="col-lg-10 col-md-10">
                    <img src="~/Content/Images/Login%20Images/topline.JPG" class="img-responsive" />
                </div>
                <div class="col-lg-1 col-md-1"></div>
            </div>
            <div class="row">
                <div class="col-lg-1 col-md-1"></div>
                <!-- start: Login Area Input and Errors -->
                <div id="loginInputErrors" class="col-lg-10 col-md-10">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 loginImg">
                            <!-- start: Login Success Message -->
                            <div id="loginSuccess" class="collapse">
                                <h4>Success</h4>
                                <p id="loginSuccessText">
                                    Your password reset request has been received, you will receive an email with your new password shortly.
                                </p>
                            </div>
                            <!-- end: Login Success Message -->
                            <!-- start: Login Error Messages -->
                            <div id="loginErrors" class="nysErrorRed collapse">
                                <h4>Login Errors</h4>
                                <!--Placeholder for error messages -->
                                <ul></ul>
                            </div>
                            <!-- end: Login Error Messages -->
                            <!-- start: Login Three Images -->
                            <div id="loginThreeImages" class="">
                                <img src="~/Content/Images/Login%20Images/threeimages.JPG" class="img-responsive" />
                            </div>
                            <!-- end: Login Three Images -->
                            <!-- start: Login Password Change Policy -->
                            <div id="loginPasswordChangePolicy" class="collapse">
                                <h4>Password Policy</h4>
                                <p>
                                    Your password has expired, please enter a new one ensuring it meets the requirements of the following policy.
                                </p>
                                <ul>
                                    <li id="pwMatch" class="inputFormError">Passwords must match </li>
                                    <li id="pw8Chars" class="inputFormError">Be at least 8 characters long </li>
                                    <li id="pwNumerical" class="inputFormError">At least one numerical character </li>
                                    <li id="pwUpper" class="inputFormError">At least one uppercase character </li>
                                    <li id="pwLower" class="inputFormError">At least one lowercase character </li>
                                    <li id="pwSpecial" class="inputFormError">At least one of the following characters ! # @@ ? $ </li>
                                </ul>
                            </div>
                            <!-- end: Login Password Change Policy -->
                        </div>
                        <div class="col-lg-6 col-md-6 loginInput">
                            <div class="loginBG">
                                <!-- start: Main Login Inputs -->
                                <div id="mainLoginInputs" class="">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            <h4>Enter your credentials to continue</h4>
                                        </div>
                                    </div>
                                    <div class="space-10"></div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            <p class="text-danger">
                                                @ViewBag.Failed
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            Username
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            <input type="text" class="form-control" id="username" name="username" />
                                        </div>
                                    </div>
                                    <div class="space-20"></div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            Password
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            <input type="password" class="form-control" id="password" name="password" />
                                        </div>
                                    </div>
                                    @*<div class="row">
                                        <div class="col-lg-12 col-md-12 text-right">
                                            <a href="#" id="lbForgottenPassword" class="text-white">I have forgotten my password</a>
                                        </div>
                                    </div>*@
                                    <div class="space-20"></div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            <button type="submit" id="btnLogin" name="btnLogin" class="btn btn-primary form-control">Sign me in</button>
                                        </div>
                                    </div>
                                </div>
                                <!-- end: Main Login Inputs -->
                                <!-- start: Login Password Reset -->
                                <div id="loginPasswordReset" class="collapse">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            <h4>Password Reset</h4>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            New Password
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            <asp:TextBox ID="txtNewPassword" runat="server" CssClass="form-control" TextMode="Password" />
                                        </div>
                                    </div>
                                    <div class="space-20"></div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            Confirm Password
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            <asp:TextBox ID="txtConfirmPassword" runat="server" CssClass="form-control" TextMode="Password" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 text-right">
                                            <asp:LinkButton ID="lbCancelConfirmPassword" runat="server" Text="Cancel password change" CssClass="text-white" />
                                        </div>
                                    </div>
                                    <div class="space-20"></div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            <asp:Button ID="btnConfirmPassword" runat="server" CssClass="btn btn-primary form-control" Text="Confirm" />
                                        </div>
                                    </div>
                                </div>
                                <!-- end: Login Password Reset -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end: Login Area Input and errors -->
                <!-- start: User Terms Acceptance -->
                <div id="loginUserAcceptance" class="col-lg-10 col-md-10 terms collapse">
                    <div class="row">
                        <div class="col-lg-12 ">
                            <h4>Terms and Condition of Use</h4>
                            <div id="termsContent">
                                <!-- terms will appear here -->
                            </div>
                        </div>
                    </div>
                    <div class="space-10"></div>
                    <div class="row">
                        <div class="col-lg-3">
                            <input type="button" class="btn btn-danger form-control" id="btnDeclineTerms" value="Decline Terms" />
                        </div>
                        <div class="col-lg-6"></div>
                        <div class="col-lg-3">
                            <asp:Button ID="btnAcceptTerms" runat="server" CssClass="btn btn-primary form-control" Text="Accept Terms" />
                        </div>
                    </div>
                    <div class="space-10"></div>
                </div>
                <!-- end: User Terms Acceptance -->
                <div class="col-lg-1 col-md-1"></div>
            </div>
            <div class="row">
                <div class="col-lg-1 col-md-1"></div>
                <div class="col-lg-10 col-md-10">
                    <img src="~/Content/Images/Login%20Images/bottomline.JPG" class="img-responsive" />
                </div>
                <div class="col-lg-1 col-md-1"></div>
            </div>
        </div>
        <div class="container containerCopyright">
            <div class="row">
                <div class="col-lg-12 col-md-12 text-right">
                    © 2014 NYS Corporate <span class="nysBlue">|</span><span class="nysGreen">|</span><span class="nysPink">|</span> Technical Support 01904 420 280 <span class="nysBlue">|</span><span class="nysGreen">|</span><span class="nysPink">|</span> <a href="http://www.nyscorporate.com" target="_blank">www.nyscorporate.com</a>
                </div>
            </div>
        </div>
    </form>
